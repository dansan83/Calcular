<?xml version="1.0" encoding="utf-8"?>

<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.daniel.holamundo.MainActivity"
    android:padding="0dp"
tools:showIn="@layout/activity_main"
    android:background="#4c4f4c"
    android:weightSum="1">

    <TextView


        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Calculadora"
        android:typeface="serif"
        android:layout_marginBottom="15dp"

        android:layout_weight="0.36"
        android:background="@android:color/background_dark" />

    <TextView

        android:id="@+id/myTextView"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:typeface="serif"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.35"
        android:background="@android:color/darker_gray" />

    <TableRow android:background="@android:drawable/btn_default_small"
        >
        <TextView
            android:layout_span="3"
            android:id="@+id/myTextView2"
            android:textColor="#000000"
            android:textSize="50sp"
            android:layout_gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="50dp"
            android:padding="0dp"

            android:typeface="serif"
            android:layout_marginBottom="30dp"
            />

    </TableRow >
<TableRow android:padding="2dp" >
    <Button
        android:text="1"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:textSize="55sp"
        android:layout_span="1"
        android:typeface="sans"
        android:textColor="#4c4f4c"
        android:id="@+id/button1"

        android:background="@android:drawable/button_onoff_indicator_off" />
    <Button
        android:text="2"
        android:textSize="55sp"
        android:layout_marginRight="0dp"
        android:layout_span="1"
        android:id="@+id/button2"
        android:typeface="sans"
        android:textColor="#4c4f4c"
        android:background="@android:drawable/button_onoff_indicator_off" />
    <Button
        android:text="3"
        android:textSize="55sp"
        android:layout_marginRight="0dp"
        android:layout_span="1"
        android:typeface="sans"
        android:id="@+id/button3"
        android:textColor="#4c4f4c"
        android:background="@android:drawable/button_onoff_indicator_off" />
    <Button
        android:text="+"
        android:layout_marginRight="0dp"
        android:typeface="sans"
        android:textSize="55sp"
        android:layout_span="1"
        android:textColor="#4c4f4c"
        android:id="@+id/buttonSuma"

        android:background="@android:drawable/button_onoff_indicator_on" />

</TableRow>
    <TableRow android:padding="2dp">
        <Button
            android:text="4"
            android:typeface="sans"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/button4"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_off" />
        <Button
            android:text="5"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/button5"
            android:visibility="visible"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_off" />
        <Button
            android:text="6"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/button6"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_off" />
        <Button
            android:text="-"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/buttonResta"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_on" />

    </TableRow>

<TableRow android:padding="2dp">
<Button
    android:text="7"
    android:layout_marginLeft="0dp"
    android:typeface="sans"
    android:layout_marginRight="0dp"
    android:textSize="55sp"
    android:layout_span="1"
    android:id="@+id/button7"
    android:textColor="#4c4f4c"
    android:background="@android:drawable/button_onoff_indicator_off" />
<Button
    android:text="8"
    android:typeface="sans"
    android:layout_marginRight="0dp"
    android:textSize="55sp"
    android:layout_span="1"
    android:id="@+id/button8"
    android:textColor="#4c4f4c"
    android:background="@android:drawable/button_onoff_indicator_off" />
<Button
    android:text="9"
    android:typeface="sans"
    android:layout_marginRight="0dp"
    android:textSize="55sp"
    android:textColor="#4c4f4c"
    android:layout_span="1"
    android:id="@+id/button9"
    android:background="@android:drawable/button_onoff_indicator_off" />
<Button
    android:text="x"
    android:typeface="monospace"
    android:layout_marginRight="0dp"
    android:textSize="55sp"
    android:layout_span="1"
    android:id="@+id/buttonMultiplicar"
    android:textColor="#4c4f4c"
    android:background="@android:drawable/button_onoff_indicator_on" />

</TableRow>
    <TableRow android:padding="2dp">
        <Button
            android:text="0"
            android:layout_marginLeft="0dp"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/button0"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_off" />
        <Button
            android:text="."
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/buttonPunto"
            android:layout_marginBottom="0dp"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_off" />
        <Button
            android:text="C"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:id="@+id/buttonLimpiar"
            android:textColor="#4c4f4c"
            android:background="@android:drawable/button_onoff_indicator_on" />
        <Button
            android:text="/"
            android:typeface="sans"
            android:layout_marginRight="0dp"
            android:textSize="55sp"
            android:layout_span="1"
            android:textColor="#4c4f4c"
            android:id="@+id/buttonDivide"
            android:background="@android:drawable/button_onoff_indicator_on" />

    </TableRow >

    <Button

        android:text="="
        android:typeface="serif"
        android:textSize="30sp"
        android:background="@android:drawable/bottom_bar"
        android:layout_span="1"
        android:padding="2dp"
        android:id="@+id/buttonIgual"
        android:layout_weight="0.34"
        android:layout_width="wrap_content" />


</TableLayout>